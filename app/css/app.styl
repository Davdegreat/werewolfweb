// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  //vertical-gradient #eee, #fff
  text-align center

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  color #0057c5
  text-shadow 1px 1px 2px white

#content
  padding 0
//header
body header
  padding 0
  border-bottom 1px solid #0057c5
  h1
    float left
  nav ul li
    display inline-block
    margin-right 1em

.error
  color #dd0000
// window
.window
  round 5px
  border 1px solid #666666
  box-shadow 2px 2px 3px #000000
  margin 0
  padding 0 0.6em
  position absolute
  background-color rgba(240,240,240,0.7)
  
.window.login
  width 20em
  
.window h1
  margin 0
  font-size 1.2em
  padding-left 1em
  color #000000
  text-shadow #ffffff
  vertical-gradient rgba(255,255,255,0.4), rgba(255,255,255,0.6)
  
.window form p
  text-align center
.window .closer
  float right
  
//user-profile
section.profile
  p.edit
    background-color #bbbbbb
  p.edit:empty
    height 1em
  form input[type="text"]
    width 100%
    
//game
body.night
  background-color #000044
  color #ffffff
  a
    color #ffffff
  
body.day
  background-color rgb(255,217,83)
