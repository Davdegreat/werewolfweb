.game
  h1#roomname
  section.players
    h1 参加者一覧
    ul#players
    #playersinfo
  section#gamestartsec(hidden)
    h1 ゲーム開始
    form#gamestart
      p
        | 現在の人数 : 
        output(name="number")
        | 人
      fieldset
        legend 役職
        dl.jobs
          dt 村人
          dd: output(name="Human")
          dt 占い師
          dd: input(name="Diviner",min="0",step="1",type="number")
          dt 霊能者
          dd: input(name="Psychic",min="0",step="1",type="number")
          dt 狂人
          dd: input(name="Madman",min="0",step="1",type="number")
          dt 狩人
          dd: input(name="Guard",min="0",step="1",type="number")
          dt 人狼
          dd: input(name="Werewolf",min="1",step="1",type="number")
      fieldset
        legend ルール
        p
          | 一日目夜
          select(name="scapegoat")
            option(value="on") 身代わり君が死ぬ
            option(value="off") 参加者が死ぬ
            option(value="no") 誰も死なない
      p: input(type="submit",value="開始")
  .infobox
    div
      | あなたは
      b#myjob ???
      | です
    #jobinfo
  form#jobform(hidden)
    ul#form_players
    #form_day(hidden).jobformarea
      p
        | 処刑する人に投票して下さい：
        input(type="submit",value="投票する")
    #form_Werewolf(hidden).jobformarea
      p
        | 殺す人を一人選んで下さい（先着順）：
        input(type="submit",value="殺す")
    #form_Diviner(hidden).jobformarea
      p
        | 占う人を一人選んで下さい：
        input(type="submit",value="占う")
    #form_Guard(hidden).jobformarea
      p
        | 護衛する人を一人選んで下さい:
        input(type="submit",value="護衛する")
  form#speakform
    p
      input(size="50",name="comment",required)
      input(type="submit",value="発言")
  #logs
  
